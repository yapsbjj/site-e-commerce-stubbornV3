{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}
<div class="product-container">
  <div class="card mb-12" style="margin-top: 80px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="{{ asset('uploads/images/'~product.image) }}" class="img-fluid rounded-start" alt="sweetshirt-image">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{ product.nom }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <p class="card-text"><small class="text-body-secondary">Prix</small></p>
            <p>{{ product.price}}</p>
            <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="btn btn-outline-success">Ajouter au panier</a>

          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}